{
  "parser": "babel-eslint",
  "extends": [
    "eslint-config-airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
      "prettier",
      "flowtype"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
   "rules": {
     "prettier/prettier": "error",
     "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
     "react/prop-types": [0],
     "react/prefer-stateless-function": [0],
     "react/prefer-es6-class": [0],
     "no-console": [0],
     "no-alert": [0]
   }
}
